<Context>

    <!-- Database connection -->
    <Resource driverClassName="org.postgresql.Driver"
              maxIdle="2"
              maxTotal="20"
              maxWaitMillis="5000"
              maxActive="400"
              name="jdbc/CubaDS"
              password="cuba"
              type="javax.sql.DataSource"
              url="jdbc:postgresql://localhost/genesis"
              username="cuba"/>
