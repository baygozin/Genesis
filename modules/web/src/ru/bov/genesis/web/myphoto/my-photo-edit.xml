<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.bov.genesis.web.myphoto.MyPhotoEdit"
        datasource="myPhotoDs"
        focusComponent="fieldGroup"
        messagesPack="ru.bov.genesis.web.myphoto">
    <dsContext>
        <datasource id="myPhotoDs"
                    class="ru.bov.genesis.entity.test.MyPhoto"
                    view="myPhoto-view"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                modal="true"
                width="600"/>
    <layout expand="imageGroupBox"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="myPhotoDs">
            <column width="250px">
                <field id="name"/>
                <field id="image"/>
            </column>
        </fieldGroup>
        <groupBox id="imageGroupBox"
                  spacing="true">
            <embedded id="imagePhoto"
                      align="MIDDLE_CENTER"
                      type="IMAGE"
                      width="300px"/>
        </groupBox>
        <frame id="windowActions"
               responsive="true"
               screen="extendedEditWindowActions"/>
    </layout>
</window>
