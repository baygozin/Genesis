<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="ru.bov.genesis.web.employee.EmployeeBrowse"
        focusComponent="employeesTable"
        lookupComponent="employeesTable"
        messagesPack="ru.bov.genesis.web.employee"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd">
    <dsContext>
        <groupDatasource id="employeesDs"
                         class="ru.bov.genesis.entity.mainentity.Employee"
                         view="employee-view">
            <query>
                <![CDATA[select e from genesis$Employee e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="employeesTable"
            spacing="true">
        <filter id="filter"
                applyTo="employeesTable"
                collapsed="true"
                datasource="employeesDs"
                defaultMode="fts"
                modeSwitchVisible="false"
                useMaxResults="false">
            <properties include=".*"/>
        </filter>
        <groupTable id="employeesTable"
                    editable="true"
                    multiLineCells="true"
                    multiselect="true"
                    presentations="true"
                    responsive="true"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
                <action id="excel"/>
            </actions>
            <columns>
                <column id="fieldStatus"
                        align="CENTER"
                        caption="msg://fieldStatusName"
                        width="70"/>
                <column id="fullName"
                        caption="msg://columnFIOname"/>
                <column id="direction_work"/>
                <column id="building"/>
                <column id="position"/>
                <column id="profession"/>
                <column id="phoneMobile"
                        caption="msg://phoneColName"/>
                <column id="emailPrivate"
                        caption="msg://emailColName"/>
                <column id="dateWorkStart"/>
                <column id="dateWorkEnd"/>
            </columns>
            <rows datasource="employeesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="employeesTable.create"/>
                <button id="editBtn"
                        action="employeesTable.edit"/>
                <button id="removeBtn"
                        action="employeesTable.remove"/>
                <button id="excelBtn"
                        action="employeesTable.excel"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
