<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="ru.bov.genesis.web.department.DepartmentEdit"
        datasource="departmentDs"
        focusComponent="fieldGroup"
        messagesPack="ru.bov.genesis.web.department">
    <dsContext>
        <datasource id="departmentDs"
                    class="ru.bov.genesis.entity.services.Department"
                    view="_local"/>
    </dsContext>
    <dialogMode forceDialog="true"
                height="AUTO"
                modal="true"
                width="600"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="departmentDs">
            <column width="250px">
                <field id="nameDepartment"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
